<div class= "row">
 <div class="col-xs-10 col-xs-offset-1"> 

  <% @messages.each do |message| %>
  <div class="col-lg-12 col-sm-12 col-xs-12">
    <ul class = "each_messages">
      <ul class= "data">
        <li>
          <% if message.image? %>
          <%= image_tag message.image.url %>
          <% end %>
        </li>
        <li class="content">
          <p>内容:<%= message.content %></p>
          <p>投稿者:<%= message.user.name %></p>
        </li>
      </ul>
      <div class= "row button">
        <li><%= link_to 'Show', message, class: "btn btn-default btn-sm btn_index"  %></li>

        <li><%= link_to 'Edit', edit_message_path(message), class: "btn btn-default btn-sm btn_index"  %></li>

        <li><%= link_to 'Delete', message, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-sm btn_index"  %></li>
      </div>
    </ul>
  </div>
  <% end %>
</div>
</div>