  <div class= "container">
    <h1>新規登録</h1>

    <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <div class="form-group">
      <%= form_with(model: @user, local: true) do |f| %>
      <%= f.label :お名前 %>
      <%= f.text_field :name, required: true, placeholder: "Write your name" ,class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :メールアドレス %>
      <%= f.email_field :email, required: true, placeholder: "Write your email",class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :パスワード %>
      <%= f.password_field :password, required: true, placeholder: "Password",class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :確認用パスワード %>
      <%= f.password_field :password_confirmation, required: true, placeholder: "Password Confirmation",class: "form-control" %><br>
    </div>
    <div class="actions">
      <%= f.submit "登録", class: "btn btn-default btn-sm" %>
    </div>
    <% end %>
  </div>