<div class="container">
	<div class="row">
		<div class="col-md-6">
			<div class="panel panel-prinary">
				<div class="panel-body">
					<h1>ログイン</h1>
					<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
					<div class="form-singnin">
						<div class="form-group">
							<%= f.label :メールアドレス %>
							<%= f.email_field :email,class: "form-control" %>
						</div>
						<div class="form-group">
							<%= f.label :パスワード %>
							<%= f.password_field :password,class: "form-control" %>
						</div>

						<%= f.submit "ログイン", class: "btn btn-default btn-sm" %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>